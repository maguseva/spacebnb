<div class="container">
  <div class="row">
    <div class="col-8 col-md-6 col-sm-8 offset-3">

      <h2>Forgot your password?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions btn btn-danger">
        <%= f.button :submit, "Reset my password" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

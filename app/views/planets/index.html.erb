<h1 id="list-page">Adventure in Space</h1>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class="container">
  <div class="row">
    <% @planets.each do |planet| %>
      <div class="col-md-6 col-lg-4" id="planet-card">
        <%= link_to planet_path(planet) do %>
          <div class="card" >
            <img src="<%= planet.photo %>" class="card-img-top" alt="..." style="background-image">
            <div class="card-body">
              <h5 class="card-title"><%= planet.name %></h5>
              <p class="card-title"><%= planet.price %> â‚¬</p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

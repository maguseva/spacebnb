<div class="container col-sm-6 col-md-8 col-lg-10" >
  <div class="row">
    <div class="col-12">
      <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @planet.photo %>);">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <h2><strong><%= @planet.name %></strong></h2>
      <br>
      <div class="d-flex capacity-travel-box">
        <div id="capacity">
          <h4>👩🏼‍🚀👨🏼‍🚀 Capacity</h4>
          <p> <%= @planet.name %> offers space for <strong><%= @planet.capacity %> persons</strong>.</p>
        </div>
        <div id="travel-time">
          <h4>⏳ Travel time</h4>
          <p>It takes 6 years with <strong>Virgin Galactic</strong>.</p>
          <p>It takes 3 years with <strong>Space X</strong>.</p>
        </div>
      </div>
      <h3 id="description">Description</h3>
      <p><%= @planet.description %></p>
      <div id="reviews">
        <%= render 'planets/reviews', planet: @planet, booking: @booking %>
      </div>
    </div>
    <div class="col-6">
      <div id="price">
        <h4><%= @planet.price%>€ per Night</h4>
      </div>
      <div id="booking-form">
        <%= render 'planets/form', planet: @planet, booking: @booking %>
      </div>
    </div>
  </div>
</div>

